    <script>
        // 로또 번호 추첨 함수
        function generateLottoNumbers() {
            const allNumbers = Array.from({ length: 45 }, (_, i) => i + 1); // 1~45 숫자 배열 생성
            const shuffledNumbers = allNumbers.sort(() => Math.random() - 0.5); // 배열을 무작위로 섞음
            const lottoNumbers = shuffledNumbers.slice(0, 6); // 6개의 번호를 뽑음
            lottoNumbers.sort((a, b) => a - b); // 번호를 오름차순으로 정렬

            return lottoNumbers;
        }

        // 버튼 클릭 시 로또 번호를 추첨하고 결과 출력
        document.getElementById('lotto-button').addEventListener('click', function() {
            const lottoNumbers = generateLottoNumbers();
            const lottoResultText = `${lottoNumbers.join(' , ')}`;
            document.getElementById('lotto-result').innerHTML = lottoResultText;
        });
    </script>
